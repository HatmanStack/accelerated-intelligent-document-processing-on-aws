{
    "StartAt": "TextractStep",
    "States": {
      "TextractStep": {
        "Type": "Task",
        "Resource": "${TextractFunctionArn}",
        "ResultPath": "$.textractResult",
        "Retry": [
          {
            "ErrorEquals": ["States.TaskFailed", "Lambda.ServiceException", "Lambda.AWSLambdaException", "Lambda.SdkClientException"],
            "IntervalSeconds": 2,
            "MaxAttempts": 10,
            "BackoffRate": 2
          }
        ],
        "Next": "BedrockStep"
      },
      "BedrockStep": {
        "Type": "Task",
        "Resource": "${BedrockFunctionArn}",
        "Parameters": {
          "textract.$": "$.textractResult",
          "output_bucket_name": "${OutputBucket}",
          "detail": {
            "object": {
              "key.$": "$.detail.object.key"
            }
          }
        },
        "Retry": [
          {
            "ErrorEquals": ["States.TaskFailed", "Lambda.ServiceException", "Lambda.AWSLambdaException", "Lambda.SdkClientException"],
            "IntervalSeconds": 2,
            "MaxAttempts": 10,
            "BackoffRate": 2
          }
        ],
        "End": true
      }
    }
  }